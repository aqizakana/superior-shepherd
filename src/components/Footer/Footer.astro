---
import Social from "./Social.astro";
---

<style>
    html,
    body {
        height: 100%;
        margin: 0;
    }
    .container {
        bottom: 0rem;
        position: fixed;
        justify-content: center;
        width: 100%;
    }
    .container__line {
        display: block;
        justify-content: center;
        width: calc(100% - 2rem);
        height: 1px;
        background-color: #ff9776;
        margin: 0 1rem;
    }

    footer {
        display: flex;
        flex-direction: row;
        justify-content: center;
        bottom: 0rem;
        width: 100%;
    }
    p {
        font-size: 0.8rem;
        font-weight: bold;
        margin: 1rem;
    }
</style>

<div class="container">
    <span class="container__line"></span>
    <footer>
        <p>まるしー:Shinnosuke Uota</p>
    </footer>
</div>
